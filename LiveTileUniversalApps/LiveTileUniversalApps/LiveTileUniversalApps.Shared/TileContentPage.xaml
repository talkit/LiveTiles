    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LiveTileUniversalApps"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBox x:Name="text1TextBox" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" PlaceholderText="Text Field 1" VerticalAlignment="Top" Width="228"/>
        <TextBox x:Name="text2TextBox" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" PlaceholderText="Text Field 2" VerticalAlignment="Top" Width="228"/>
        <Button Content="Send" HorizontalAlignment="Center" Click="SendButton_Click"></Button>
    </StackPanel>
</Page>
